{
  "name": "@tryghost/koenig-react",
  "version": "0.0.2",
  "repository": "https://github.com/TryGhost/Koenig/tree/main/packages/koenig-react",
  "author": "Ghost Foundation",
  "license": "MIT",
  "scripts": {
    "start": "yarn webpack serve --config webpack.config.dev.js",
    "test": "jest",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js --cache",
    "posttest": "yarn lint",
    "build": "yarn webpack --config webpack.config.js",
    "serve": "yarn webpack serve",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn publish && git push ${GHOST_UPSTREAM:-upstream} main --follow-tags; fi"
  },
  "publishConfig": {
    "access": "public"
  },
  "unpkg": "dist/umd/koenig-react.min.js",
  "files": [
    "dist/umd/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@tailwindcss/typography": "^0.5.4",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "c8": "7.11.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-ghost": "2.12.0",
    "glob": "^8.0.3",
    "mocha": "10.0.0",
    "node-static": "^0.7.11",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.14",
    "should": "13.2.3",
    "sinon": "14.0.0",
    "tailwindcss": "^3.1.6",
    "to-string-loader": "^1.2.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "util": "^0.12.4",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "14.3.0",
    "@tryghost/mobiledoc-kit-experimental": "^0.14.2",
    "babel-plugin-macros": "^3.1.0",
    "express": "^4.18.1",
    "fs": "^0.0.1-security",
    "mobiledoc-kit": "npm:@tryghost/mobiledoc-kit-experimental",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-mobiledoc-editor": "0.13.0",
    "react-scripts": "5.0.1",
    "react-shadow": "^19.0.3",
    "styled-components": "^5.3.5",
    "twin.macro": "^3.0.0-rc.3",
    "web-vitals": "^2.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:ghost/browser"
    ],
    "plugins": [
      "ghost"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov",
      "cobertura"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
